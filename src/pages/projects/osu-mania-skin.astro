---
import ScrollDown from "../../components/ScrollDown.astro";
import Layout from "../../layouts/Layout.astro";
import "../../styles/global.css";

const title = "CoreCat's 4K osu!mania Skin";
const description =
    "A skin I made for osu!lazer to enhance my gameplay experience.";
const image =
    "https://raw.githubusercontent.com/corecathx/corecathx.github.io/refs/heads/main/public/images/osu/skinpreview1.png";
---

<Layout {title} {description} {image}>
    <div class="relative min-h-screen overflow-hidden">
        <div class="relative h-[100vh] flex items-center justify-center overflow-hidden">
            <div class="absolute inset-0 z-0">
                <video
                    autoplay
                    muted
                    loop
                    playsinline
                    class="w-full h-full object-cover opacity-20 blur-sm"
                >
                    <source
                        src="/videos/osuskin-preview.mp4"
                        type="video/mp4"
                    />
                </video>
                <div
                    class="absolute inset-0 bg-gradient-to-b from-transparent to-[#0a0a0f]"
                >
                </div>
            </div>

            <div class="relative z-10 container max-w-6xl px-6 text-center">
                <div
                    class=" p-8 md:p-12 max-w-3xl mx-auto"
                >
                    <h1 class="text-4xl md:text-6xl font-extrabold mb-6">
                        <span class="gradient-text">CoreCat's 4K</span><br />
                        osu!mania Skin
                    </h1>
                    <p class="text-md md:text-xl text-[var(--foreground)]/80 mb-10">
                        A skin I made for <span class='gradient-text'>osu!mania</span> to enhance my gameplay experience.<br>
                        This skin works only in <a href='https://osu.ppy.sh/home/download' class='osu-gradient'>osu!lazer</a>.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a
                            href="/downloads/CoreCat's 4K Mania Skin.osk"
                            class="btn-pink hover-scale"
                        >
                            <i class="fas fa-download mr-2"></i> Download Skin
                        </a>
                        <a href="#previews" class="hover-scale inline-flex items-center border border-[var(--accent1)] text-[var(--accent1)] px-8 py-4 rounded-full hover:bg-[var(--accent1)]/10  hover-scale">
                            <i class="fas fa-images mr-2"></i> View Previews
                        </a>
                    </div>
                </div>
            </div>
            <ScrollDown/>
        </div>

        <section id="previews" class="py-20 relative z-10">
            <div class="container max-w-6xl px-6 mx-auto">
                <div 
                    class="text-4xl md:text-5xl font-extrabold text-center w-fit mx-auto mb-12"
                    data-aos="fade-up">
                    <h2>
                        In-Game <span class='gradient-text'>Previews</span>
                    </h2>
                    <p class="mt-2 font-normal text-lg md:text-xl">
                        Take a quick look at how the skin appears in-game.
                    </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
                    <div
                        class="glass-effect rounded-2xl overflow-hidden hover-scale"
                        data-aos="fade-right"
                    >
                        <img
                            src="/images/osu/skinpreview1.png"
                            alt="Low-intensity map preview"
                            class="w-full h-64 object-cover"
                        />
                    </div>

                    <div
                        class="glass-effect rounded-2xl overflow-hidden hover-scale"
                        data-aos="fade-left"
                    >
                        <img
                            src="/images/osu/skinpreview2.png"
                            alt="High-intensity map preview"
                            class="w-full h-64 object-cover"
                        />
                    </div>
                </div>
            </div>
        </section>
    </div>

    <style>
        .osu-gradient {
            background: linear-gradient(135deg, #d64486 0%, #ff86c4 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .btn-pink {
            background: linear-gradient(135deg, #ff66aa 0%, #cc5288 100%);
            color: white;
            padding: 1rem 2rem;
            border-radius: 9999px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            box-shadow: 0 4px 20px rgba(255, 102, 170, 0.3);
        }

        .btn-pink:hover {
            box-shadow: 0 6px 25px rgba(255, 102, 170, 0.5);
            transform: translateY(-2px);
        }

        .btn-outline {
            background: transparent;
            color: #f0f4ff;
            padding: 1rem 2rem;
            border-radius: 9999px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            border: 2px solid rgba(255, 255, 255, 0.2);
        }

        .btn-outline:hover {
            border-color: rgba(255, 255, 255, 0.4);
            background: rgba(255, 255, 255, 0.05);
        }
    </style>
</Layout>
