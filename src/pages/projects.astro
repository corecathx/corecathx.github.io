---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import projects from "../data/projects.ts";
import ProjectCard from "../components/ProjectCard.astro";
---

<Layout title="Projects">
    <div class="mt-50 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class='text-center mb-12 w-fit mx-auto' data-aos="fade-up">
            <h1 class="text-5xl md:text-6xl w-fit pb-2 font-extrabold gradient-text mx-auto">
                Projects
            </h1>
            <h2 class="font-bold text-white mt-2 text-xl md:text-2xl">
                I make stuff, here are some of them.
                <span class="block mt-2 text-gray-400 font-normal text-sm md:text-md">
                    Everything in here is not final design-wise.
                </span>
            </h2>
        </div>

        <hr class="border-gray-800" />

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-6">
            {projects.map((project, index) => (
                <ProjectCard {...project} delay={index * 100} />
            ))}
        </div>

        <p class="gradient-text text-center my-10">... I'll try to list more of them later! (that is if i made another project)</p>
    </div>
</Layout>
